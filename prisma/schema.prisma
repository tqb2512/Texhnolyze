generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type InventoryProductList {
  product  String @db.ObjectId
  quantity Int
}

type OrderProductList {
  product  String
  quantity Float
}

type ProductProperties {
  name  String
  value String
}

type UserAddress {
  name  String
  value String
}

model brand {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  description String
  email       String
  name        String
  phoneNumber String
}

model category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  image       String
  mainProps   String[]
  name        String
}

model inventory {
  id          String                 @id @default(auto()) @map("_id") @db.ObjectId
  address     String
  name        String
  productList InventoryProductList[]
}

model order {
  id              String             @id @default(auto()) @map("_id") @db.ObjectId
  date            DateTime           @db.Date
  productList     OrderProductList[]
  shippingAddress String
  shippingMethod  String
  status          String
  subTotal        Int
  total           Int
  user_id         String             @db.ObjectId
  voucher         String
}

model product {
  id           String              @id @default(auto()) @map("_id") @db.ObjectId
  brand        String              @db.ObjectId
  category     String              @db.ObjectId
  description  String
  images       String[]
  name         String
  previewImage String
  price        Int
  properties   ProductProperties[]
}

model review {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  comment String
  product String @db.ObjectId
  rate    Float
  user    String @db.ObjectId
}

model user {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  address     UserAddress[]
  dateOfBirth DateTime      @db.Date
  email       String
  fullname    String
  password    String
  phoneNumber String
  role        String
  username    String
}

model voucher {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  applyAllItem         Boolean
  applyAllUser         Boolean
  code                 String
  description          String
  itemsApply           String[]
  maxValueInFinalPrice Float
  type                 String
  userApply            String[]
  value                Float
}
